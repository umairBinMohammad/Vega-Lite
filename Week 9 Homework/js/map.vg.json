{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Bushfires in Australia (2000)",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "js/aus_states_provinces.topojson",
          "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },
      {
        "data": {
          "url": "data/2000bushfires.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {
            "field": "brightness",
            "type": "quantitative",
            "title": "Brightness"
          },
          "color": {
            "field": "confidence",
            "type": "quantitative",
            "title": "Confidence",
            "scale": {"scheme": "reds"}
          },
          "tooltip": [
            {"field": "latitude", "type": "quantitative", "title": "Latitude"},
            {"field": "longitude", "type": "quantitative", "title": "Longitude"},
            {"field": "brightness", "type": "quantitative", "title": "Brightness"},
            {"field": "confidence", "type": "quantitative", "title": "Confidence"},
            {"field": "acq_date", "type": "temporal", "title": "Acquisition Date"},
            {"field": "acq_time", "type": "quantitative", "title": "Acquisition Time"},
            {"field": "satellite", "type": "nominal", "title": "Satellite"},
            {"field": "instrument", "type": "nominal", "title": "Instrument"},
            {"field": "bright_t31", "type": "quantitative", "title": "Brightness T31"},
            {"field": "frp", "type": "quantitative", "title": "FRP"},
            {"field": "daynight", "type": "nominal", "title": "Day/Night"},
            {"field": "type", "type": "nominal", "title": "Type"}
          ]
        }
      }
    ]
  }