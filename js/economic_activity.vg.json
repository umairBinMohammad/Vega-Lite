{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 610,
  "height": 300,
  "title": {
    "text": "Victorian State Final Demand Over Time (Take note of the steep increase in 2009)",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "data": {
    "url": "data/VictorianEconomicActivity.csv",
    "format": {"type": "csv", "parse": {"Date": "date:'%d/%m/%Y'"}}
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "interpolate": "monotone",
        "color": "red"
      },
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": "Date",
          "axis": {
            "tickCount": "year",
            "labelExpr": "timeFormat(datum.value, '%Y')"
          }
        },
        "y": {
          "field": "SFD",
          "type": "quantitative",
          "title": "SFD"
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color": "red",
        "size": 50,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal"
        },
        "y": {
          "field": "SFD",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Date"},
          {"field": "SFD", "type": "quantitative", "title": "SFD"}
        ]
      }
    }
  ],
  "selection": {
    "brush": {
      "type": "interval",
      "encodings": ["x"]
    }
  }
}
