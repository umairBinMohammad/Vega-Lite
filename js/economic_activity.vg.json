{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 610,
  "height": 300,
  "title": {
    "text": "Victorian Economic Activity Over Time",
    "fontSize": 16,
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "data": {
    "url": "data/VictorianEconomicActivity.csv",
    "format": {"type": "csv", "parse": {"Date": "date:'%d/%m/%Y'"}}
  },
  "mark": {
    "type": "line",
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "Date",
      "axis": {
        "tickCount": "year",
        "labelExpr": "timeFormat(datum.value, '%Y')"
      }
    },
    "y": {
      "field": "SFD",
      "type": "quantitative",
      "title": "SFD"
    },
    "color": {
      "value": "red"
    },
    "tooltip": [
      {"field": "Date", "type": "temporal", "title": "Date"},
      {"field": "SFD", "type": "quantitative", "title": "SFD"}
    ]
  },
  "selection": {
    "brush": {
      "type": "interval",
      "encodings": ["x"]
    }
  }
}